{
  "name": "ke-taxi-backend",
  "version": "1.0.0",
  "description": "The Ke-Taxi API",
  "main": "index.ts",
  "license": "MIT",
  "scripts": {
    "deploy": "cd src/; prisma deploy",
    "dev": "nodemon -e ts,graphql -x ts-node src/index.ts",
    "start": "ts-node -r dotenv/config src/index.ts",
    "test": "jest",
    "format": "prettier --write 'src/**/*.{js,ts,tsx,json,graphql}'",
    "lint": "tslint 'src/**/*.{ts,tsx}'",
    "lint:fix": "tslint --fix 'src/**/*.{ts,tsx}'"
  },
  "dependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/express-session": "^1.15.15",
    "@types/graphql": "^14.5.0",
    "@types/passport": "^1.0.1",
    "@types/passport-local": "^1.0.33",
    "bcrypt": "^3.0.6",
    "body-parser": "^1.19.0",
    "express-session": "^1.17.0",
    "graphql-yoga": "^1.18.3",
    "isemail": "^3.2.0",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0",
    "prisma-client-lib": "^1.34.10",
    "ts-node": "^8.4.1",
    "typescript": "^3.7.2"
  },
  "devDependencies": {
    "@types/jest": "^24.0.22",
    "husky": "^3.0.9",
    "jest": "^24.9.0",
    "lint-staged": "^9.4.2",
    "nodemon": "^1.19.4",
    "prettier": "^1.19.1",
    "ts-jest": "^24.1.0",
    "tslint": "^5.20.1",
    "tslint-config-prettier": "^1.18.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,ts,tsx,json,css,graphql,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
